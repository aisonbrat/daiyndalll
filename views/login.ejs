<!DOCTYPE html>
<html lang="en">
  <head>

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;900&display=swap" rel="stylesheet"> 
    <!-- end fonts -->
    <script src="https://kit.fontawesome.com/9ab56b06a3.js" crossorigin="anonymous"></script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/style.css">
    <title>login-form</title>
    
  </head>
  <body>
    <%- include('blocks/menu.ejs') %>

    <section>
      
    <div class="login-form">
      <% if(err) { %>
      <p style="color: #D8000C;
      background-color: #FFD2D2; margin: 10px 0px;
padding:12px;"><%= err %></p>
      <% } %>
      <% if(suc) { %>
        <p style="color: #4F8A10;
        background-color: #DFF2BF; margin: 10px 0px;
padding:12px;"><%= suc %></p>
        <% } %>
      
      <form class="input-group" action="/login" method="POST">
        <h3>LOGIN</h3>
        <div class="input-area">
          <label for="Username">Email</label>
          <input type="email" name="email" placeholder="Enter Email" />
        </div>
        <div class="input-area">
          <label for="Username">Password</label>
          <input type="password" name="password" placeholder="Password" />
        </div>
        <button>Login</button>
      </form> 
      <div class="log-reg-div">
        <a href="/register">Register</a>
      </div>
    </div>
  </section>
  
  </body>

</html>

