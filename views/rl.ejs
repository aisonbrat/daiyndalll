<style>
  .container {
    display: flex;
    flex-wrap: wrap;
    padding: 20px;
    justify-content: center; /* Align items to the left */
  }

  .box {
    width: calc(50% - 20px); /* 50% width with a little space between boxes */
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin: 10px;
    overflow: hidden;
  }

  .box img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .box-content {
    padding: 20px;
  }

  .box-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .box-description {
    margin-bottom: 20px;
  }

  .box-buttons {
    display: flex;
    justify-content: space-between;
  }

  .box-button {
    width: 48%; /* Adjusted width to fit two buttons in a row */
    padding: 10px 0;
    text-align: center;
    background-color: #007bff;
    /* color: #fff; */
    text-decoration: none;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
    color: white;
  }
  .box-button:hover {
    background-color: #0056b3;
    color: white;
  }
  .watch {
    color: #007bff;
    background-color: white;
    border: 2px solid #007bff;
  }
</style>
